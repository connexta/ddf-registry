<div class="segment">
    {{#if editableSegment}}
        <div data-toggle="collapse" data-target="#{{simpleId}}" class="clickable">
            <label class="segment-title-{{simpleId}} nested-label{{nestedLevel}}">{{title}}</label>
            <a href="#" class="remove-segment fa fa-minus-square fa-lg minus-button"/>
        </div>
    {{/if}}
    <div id="{{simpleId}}" class="segment-content {{#if editableSegment}}collapse{{/if}}">
        {{#if showFields}}
            <table class='table align-middle'>
                <tbody class="form-fields">

                </tbody>
            </table>
        {{/if}}
        <table class='table align-middle'>
            <tbody class="form-segments">

            </tbody>
        </table>

        {{#if customizable}}
            <div id="customizable-{{simpleId}}"/>
        {{/if}}

        {{#if showAssociations}}
            <div id="associations-{{simpleId}}"/>
        {{/if}}
    </div>
</div>